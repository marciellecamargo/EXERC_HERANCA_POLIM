<?php
    class Animal{
        public $nome;
        public $id;
        public $som;
        public $func;
}
    Class Cachorro extends Animal{
        public function Cachorro($nome,$id,$som){
            $this->nome = $nome;
            $this->id = $id;
            $this->som = $som;
            $this->func= "correr";

  }
}
    Class Cavalo extends Animal{
        public function Cavalo($nome,$id,$som){
            $this->nome = $nome;
            $this->id = $id;
            $this->som = $som;
            $this->func= "correr";

  }
}
    Class Preguica extends Animal{
        public function Preguica($nome,$ida,$som){
            $this->nome = $nome;
            $this->id = $id;
            $this->som = $som;
            $this->func= "escalar arvores";
  }
}
?>
